<%= stylesheet_link_tag 'bootstrap' %>

<div class="container">

  <div class="row">
    <div class="span6">
      <h1>Game Number: <%= @game.id %></h1>
      
      <%= flash[:notice] %>
      
      <table>
        <tr>
          <td><%= @current_word.split(//).join(" ") %> </td>
        </tr>
        <tr>
          <td><%= "Guesses:" +  @game.guesses %></td>
        </tr>
        <% if @game.status == 'In Progress' %>
          <tr>
            <td>
              <%= form_for @game, :url => {:action => "update"} do |f| %>
                <%= f.label "New guess:" %>
                <%= f.text_field :guesses, :value => "" %>
                <%= f.submit "Submit Guess" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>

      <% if @game.status == 'Won!' || @game.status == 'Lose!' %>
        <p>
          <%= "You " + @game.status%>
        </p>
      <% end %>

      <%= link_to 'Back', games_path %>
      
    </div>
    
    <div class="span5">
      <h1>
        <%= @game.misses %>
      </h1>
    </div>
    
  </div>
</div>
